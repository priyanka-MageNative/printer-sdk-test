<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".printer.setting.paper.SetPrinterPaperTypeActivity">

  <include layout="@layout/base_toolbar" />

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/colorGray" />

  <TextView
      android:id="@+id/tv_set_continuous_paper"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bg_clickable"
      android:drawableEnd="@mipmap/icon_more"
      android:padding="15dp"
      android:text="set to continuous paper"
      android:textColor="@color/textColorPrimary" />

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/colorGray" />


  <TextView
      android:id="@+id/tv_set_clearance_paper"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bg_clickable"
      android:drawableEnd="@mipmap/icon_more"
      android:padding="15dp"
      android:text="set to gap paper"
      android:textColor="@color/textColorPrimary" />

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/colorGray" />


  <TextView
      android:id="@+id/tv_set_black_label_paper"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bg_clickable"
      android:drawableEnd="@mipmap/icon_more"
      android:padding="15dp"
      android:text="set to black mark paper"
      android:textColor="@color/textColorPrimary" />

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/colorGray" />
</LinearLayout>